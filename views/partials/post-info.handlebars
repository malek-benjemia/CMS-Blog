<article class="post">
  <div class="title">
    <a href="/post/{{id}}"  target="_blank">{{title}}</a>
    <span>({{user.username}})</span>
    <span>({{format_date created_at}})</span>
  </div>
  <div class="content">
    <a href="/post/{{id}}"  target="_blank">{{content}}</a>
  </div>
</article>

